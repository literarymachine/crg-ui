{
  "name": "crg-ui",
  "version": "0.1.0",
  "description": "The user interface for CRG",
  "scripts": {
    "clean": "rm -rf ./dist",
    "server:dev": "NODE_ENV=development node src/index.js",
    "server:prod": "npm run clean && webpack -p && NODE_ENV=production node src/index.js",
    "test": "eslint src --quiet && mocha --require babel-core/register --require ignore-styles test/helpers/browser.js test/*.js",
    "fix": "eslint src --fix",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:js": "eslint src --ext .jsx,.js --quiet",
    "lint:style": "stylelint 'src/styles/**/*.pcss'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/literarymachine/crg-ui.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/literarymachine/crg-ui/issues"
  },
  "homepage": "https://github.com/literarymachine/crg-ui#readme",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "css-loader": "^0.28.4",
    "enzyme": "^2.9.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-stylelint": "^7.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.2.0",
    "file-loader": "^0.11.2",
    "json-loader": "^0.5.7",
    "mocha": "^3.5.0",
    "postcss": "^6.0.9",
    "postcss-loader": "^2.0.6",
    "react-test-renderer": "^15.6.1",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "asset-require-hook": "^1.1.0",
    "babel-core": "^6.25.0",
    "dotenv": "^4.0.0",
    "es6-promise": "^4.1.1",
    "express": "^4.15.4",
    "font-awesome": "^4.7.0",
    "getenv": "^0.7.0",
    "ignore-styles": "^5.0.1",
    "isomorphic-fetch": "^2.2.1",
    "jsdom": "^11.1.0",
    "lodash": "^4.17.4",
    "mitt": "^1.1.2",
    "moment": "^2.18.1",
    "node-polyglot": "^2.2.2",
    "normalize.css": "^7.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "webpack": "^3.5.4",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2"
  }
}
